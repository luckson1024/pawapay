# PawaPay SDK Environment Configuration

# API Configuration
PAWAPAY_ENV=sandbox
PAWAPAY_API_TOKEN=your_api_token_here
PAWAPAY_API_TIMEOUT=30
PAWAPAY_VERIFY_SSL=true

# Webhook Configuration
PAWAPAY_WEBHOOK_SECRET=your_webhook_secret_here
PAWAPAY_WEBHOOK_TOLERANCE=300
PAWAPAY_WEBHOOK_URL=https://your-domain.com/webhooks/pawapay
PAWAPAY_WEBHOOK_MAX_RETRIES=3
PAWAPAY_WEBHOOK_RETRY_DELAY=60

# Database Configuration
PAWAPAY_DB_CONNECTION=mysql
PAWAPAY_DB_HOST=localhost
PAWAPAY_DB_PORT=3306
PAWAPAY_DB_DATABASE=pawapay
PAWAPAY_DB_USERNAME=your_db_user
PAWAPAY_DB_PASSWORD=your_db_password

# Logging Configuration
PAWAPAY_LOGGING_ENABLED=true
PAWAPAY_LOG_CHANNEL=daily
PAWAPAY_LOG_LEVEL=error
PAWAPAY_LOG_DAYS=7

# Security Configuration
PAWAPAY_SIGN_REQUESTS=true
PAWAPAY_ENCRYPT_DATA=true
PAWAPAY_RATE_LIMIT_ENABLED=true
PAWAPAY_RATE_LIMIT_MAX=60
PAWAPAY_RATE_LIMIT_DECAY=1

# Cache Configuration
PAWAPAY_CACHE_ENABLED=true
PAWAPAY_CACHE_TTL=3600

# Transaction Configuration
PAWAPAY_TRANSACTION_TIMEOUT=60
PAWAPAY_AUTO_CONFIRM=true
PAWAPAY_MIN_AMOUNT=1
PAWAPAY_MAX_AMOUNT=50000